<Window x:Class="TodoTasks.View.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoTasks.View"
        mc:Ignorable="d"
        Title="To Do tasks" Height="500" Width="800">
    
    <Window.Resources>
        
    </Window.Resources>


    <DockPanel>
        <!--Tasklist Panel-->
        <StackPanel DockPanel.Dock="Left" MaxWidth="200" MinWidth="200" Background="Gray">
            <TextBlock Text="Task lists" FontSize="18" Foreground="Gainsboro" Margin="5,5,5,0"/>
            
            <ListView Background="Transparent">

            </ListView>
            
            <Button Content="+New list" Width="65" HorizontalAlignment="Left" Margin="5,5,5,5"/>
        </StackPanel>

        <!--Tasks Grid-->
        <Grid>
            <ListView>

            </ListView>
        </Grid>
        
        <!--Subtask Panel-->
        <StackPanel DockPanel.Dock="Right" MaxWidth="200" MinWidth="200" Background="AliceBlue"
                    Visibility="Visible">
            <ListView Background="Transparent">

            </ListView>
            <Button Content="+Next step" Width="70" HorizontalAlignment="Left" Margin="5,5,5,5"/>
            <Button Content="Mark important" Width="95" HorizontalAlignment="Left" Margin="5,5,5,5"/>



        </StackPanel>
        
    </DockPanel>

</Window>
